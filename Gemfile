# Gemfile for Fridays with Faraday Jekyll site

source "https://rubygems.org"

# Core Jekyll gems
gem "jekyll", "~> 4.3.3"

# Required plugins
gem "jekyll-feed", "~> 0.17.0"
gem "jekyll-seo-tag", "~> 2.8.0"
gem "jekyll-sitemap", "~> 1.4.0"
gem "jekyll-archives", "~> 2.2.1"
gem "jekyll-related-posts", "~> 0.2.0"
gem "jekyll-katex", "~> 0.1.2"
gem "jekyll-toc", "~> 0.17.1"
gem "jekyll-paginate", "~> 1.1.0"

# Optional but useful gems
gem "jekyll-tagging", "~> 1.1.0"           # Tag pages and related posts
gem "jekyll-paginate-v2", "~> 3.0.0"       # Advanced pagination
gem "jekyll-redirect-from", "~> 0.16.1"   # Redirect support
gem "jekyll-remote-theme", "~> 0.4.3"     # Remote theme support
gem "jekyll-diagrams", "~> 0.7.0"          # Mermaid diagrams
gem "jekyll-asciidoc", "~> 3.0.1"          # AsciiDoc support

# Development and build gems
group :development do
  gem "jekyll-compose", "~> 0.12.0"       # Useful Jekyll commands
  gem "jekyll-include-cache", "~> 0.2.1"   # Cache includes for performance
  gem "html-proofer", "~> 3.19.4"         # HTML validation
  gem "rake", "~> 13.0.6"                 # Build tasks
  gem "listen", "~> 3.8.0"                # File watching
end

# Optional: image optimization
gem "jekyll-webp", "~> 0.3.0"
gem "image_optim", "~> 0.31.1"
gem "image_optim_pack", "~> 0.7.0"

# Optional: Search functionality
gem "jekyll-lunr-js-search", "~> 0.5.0"
gem "jekyllAlgolia", "~> 1.6.0"

# Optional: Performance and monitoring
gem "jekyll-analytics", "~> 2.1.0"
gem "jekyll-google-analytics", "~> 0.3.0"

# Jekyll minifier (optional)
gem "jekyll-minifier", "~> 0.1.8"

# Math rendering
gem "kramdown-parser-gfm", "~> 1.1.0"

# Jekyll themes (if we want to use external themes)
# gem "minimal-mistakes-jekyll", "~> 4.24.0"
# gem "hydejack", "~> 9.1.7"
# gem "fastpages", "~> 0.5.1"
